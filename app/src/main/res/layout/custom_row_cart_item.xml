<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_bg"
    android:clickable="true"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        card_view:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageSP"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/c" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/nameSp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="Dâu tây"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/sizeNameSP" />

                <TextView
                    android:id="@+id/owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="Shop 2"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/sizeNameSP" />

                <TextView
                    android:id="@+id/priceSp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="30$"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/sizeNameSP" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">



                    <com.gc.materialdesign.views.ButtonFloatSmall
                        android:id="@+id/remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/sample_yellow"
                        android:clickable="true"
                        materialdesign:iconDrawable="@drawable/ic_action_remove" />

                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="sans-serif"
                        android:text="2"
                        android:textColor="@color/textPriceOld"
                        android:textSize="@dimen/sizePriceOld" />


                    <com.gc.materialdesign.views.ButtonFloatSmall
                        android:id="@+id/add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/sample_blue"
                        android:clickable="true"
                        materialdesign:iconDrawable="@drawable/ic_action_add" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />



                    <com.gc.materialdesign.views.ButtonFloatSmall
                        android:id="@+id/delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/sample_red"
                        android:clickable="true"
                        materialdesign:iconDrawable="@drawable/ic_action_delete" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
