<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/manhinh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="xmart.com.xmart_android.activity.OrderFormActivity">

        <include
            android:id="@+id/app_bar_order"
            layout="@layout/app_bar_order" />


        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/tabs_order"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager_order"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:context=".OrderFormActivity"/>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>


