<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_order_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="xmart.com.xmart_android.activity.owner.order.CancelDetailOwner">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <include
                    android:id="@+id/app_bar"
                    layout="@layout/app_bar" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:padding="5dip"
                        android:text="Khách hàng"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/name_custom"
                        android:layout_weight="2"
                        android:padding="5dip"
                        android:text="Không xác định"
                        android:textColor="#000000" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:padding="5dip"
                        android:text="Điện thoại"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_weight="2"
                        android:padding="5dip"
                        android:text="Không xác định"
                        android:textColor="#000000" />
                    <!--android:textColor="@color/fbutton_color_green_sea"-->

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:padding="5dip"
                        android:text="Giới tính"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/gender"
                        android:layout_weight="2"
                        android:padding="5dip"
                        android:text="Không xác định"
                        android:textColor="#000000" />
                    <!--android:textColor="@color/fbutton_color_green_sea"-->

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:padding="5dip"
                        android:text="Trạng thái"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_weight="2"
                        android:padding="5dip"
                        android:text="Không xác định"
                        android:textColor="#000000" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:padding="5dip"
                        android:text="Ngày đặt hàng"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/order"
                        android:layout_weight="2"
                        android:padding="5dip"
                        android:text="Không xác định"
                        android:textColor="#000000" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:padding="5dip"
                        android:text="Ngày xử lý"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/process"
                        android:layout_weight="2"
                        android:padding="5dip"
                        android:text="Không xác định"
                        android:textColor="#000000" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:padding="5dip"
                        android:text="Ngày hủy bỏ"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/cancel"
                        android:layout_weight="2"
                        android:padding="5dip"
                        android:text="Không xác định"
                        android:textColor="#000000" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:padding="5dip"
                        android:text="Ngày hoàn thành"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/complete"
                        android:layout_weight="2"
                        android:padding="5dip"
                        android:text="Không xác định"
                        android:textColor="#000000" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:padding="5dip"
                        android:text="Tổng tiền"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/total"
                        android:layout_weight="2"
                        android:padding="5dip"
                        android:text="Không xác định"
                        android:textColor="#000000" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:padding="5dip"
                        android:text="Các sản phẩm đặt"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/name_product"
                        android:layout_weight="2"
                        android:padding="5dip"
                        android:text="Không xác định"
                        android:textColor="#000000" />

                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="Địa chỉ nhà"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/homeAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="Không xác định"
                    android:textColor="#000001" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="Địa chỉ làm việc"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/workAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="Không xác định"
                    android:textColor="#000000" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.gc.materialdesign.views.ButtonFlat
                    android:id="@+id/buttonCancel"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#1E88E5"
                    android:text="Dừng xử lý đơn hàng" />

                <com.gc.materialdesign.views.ButtonFlat
                    android:id="@+id/buttonProcess"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#1E88E5"
                    android:text="Hoàn thành đơn hàng" />



            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
